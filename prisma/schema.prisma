// prisma/schema.prisma

// ========================================
// Prisma の設定
// ========================================

// generator: Prisma Client を生成する設定
// → JavaScript から DB を操作するためのコードを自動生成
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

// datasource: どのデータベースに接続するか
// → PostgreSQL を使い、接続情報は環境変数から取得
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// Post モデル（投稿）
// ========================================
// model = テーブルの設計図

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  imageUrl  String?
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // ========================================
  // リレーション: 1つの投稿に複数のいいね
  // ========================================
  // Post 1 ←→ Like 多 の関係
  likes     Like[]
}

// ========================================
// Like モデル（いいね）
// ========================================
model Like {
  id        Int      @id @default(autoincrement())
  postId    Int      // いいねした投稿のID
  userId    String   // いいねしたユーザーのID
  createdAt DateTime @default(now())

  // ========================================
  // リレーション: いいねは1つの投稿に属する
  // ========================================
  // fields: [postId] → Like テーブルの postId が
  // references: [id] → Post テーブルの id を参照
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  // onDelete: Cascade → 投稿が削除されたら、そのいいねも自動で削除

  // ========================================
  // 複合ユニーク制約
  // ========================================
  // 同じユーザーが同じ投稿に2回いいねできないようにする
  @@unique([postId, userId])
}